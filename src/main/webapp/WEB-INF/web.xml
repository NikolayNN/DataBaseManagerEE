<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>DataBaseManagerEE</display-name>

    <!--####### Servlets #########-->
    <servlet>
        <servlet-name>Menu</servlet-name>
        <servlet-class>my.project.juja.controller.web.servlets.MenuServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Menu</servlet-name>
        <url-pattern>/menu.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BasesNames</servlet-name>
        <servlet-class>my.project.juja.controller.web.servlets.BasesNameServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BasesNames</servlet-name>
        <url-pattern>/basesnames.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ConnectToServer</servlet-name>
        <servlet-class>my.project.juja.controller.web.servlets.ConnectToServerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConnectToServer</servlet-name>
        <url-pattern>/connecttoserver.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Help</servlet-name>
        <servlet-class>my.project.juja.controller.web.servlets.HelpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Help</servlet-name>
        <url-pattern>/help.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ConnectToDatabase</servlet-name>
        <servlet-class>my.project.juja.controller.web.servlets.ConnectToDatabaseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConnectToDatabase</servlet-name>
        <url-pattern>/connecttodatabase.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TableList</servlet-name>
        <servlet-class>my.project.juja.controller.web.servlets.TableListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TableList</servlet-name>
        <url-pattern>/tablelist.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ShowTable</servlet-name>
        <servlet-class>my.project.juja.controller.web.servlets.ShowTableServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowTable</servlet-name>
        <url-pattern>/showtable.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DisconnectDataBase</servlet-name>
        <servlet-class>my.project.juja.controller.web.servlets.DisconnectDataBaseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisconnectDataBase</servlet-name>
        <url-pattern>/disconnectdb.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateDatabase</servlet-name>
        <servlet-class>my.project.juja.controller.web.servlets.CreateDatabaseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateDatabase</servlet-name>
        <url-pattern>/createdb.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DropDatabase</servlet-name>
        <servlet-class>my.project.juja.controller.web.servlets.DropDatabaseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DropDatabase</servlet-name>
        <url-pattern>/dropdb.do</url-pattern>
    </servlet-mapping>
    

    <!--########## Servlet Listener ############-->

</web-app>