<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>DataBaseManagerEE</display-name>

    <!--####### Servlets #########-->
    <servlet>
        <servlet-name>Menu</servlet-name>
        <servlet-class>my.project.juja.controller.web.MenuServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Menu</servlet-name>
        <url-pattern>/menu.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BasesNames</servlet-name>
        <servlet-class>my.project.juja.controller.web.BasesNameServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BasesNames</servlet-name>
        <url-pattern>/basesnames.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ConnectToServer</servlet-name>
        <servlet-class>my.project.juja.controller.web.ConnectToServerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConnectToServer</servlet-name>
        <url-pattern>/connecttoserver.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Help</servlet-name>
        <servlet-class>my.project.juja.controller.web.HelpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Help</servlet-name>
        <url-pattern>/help.do</url-pattern>
    </servlet-mapping>

    <!--########## Servlet Listener ############-->
    <listener>
        <listener-class>my.project.juja.controller.web.servletContextListener</listener-class>
    </listener>
</web-app>